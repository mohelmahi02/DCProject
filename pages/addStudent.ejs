<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
</head>
<body>
    <h1>Add Student</h1>
    <a href="/"> Home</a>
    <br><br>

    <% if (errors.length > 0) { %>
        <ul style="color: red;">
            <% errors.forEach(error => { %>
                <li><%= error %></li>
            <% }); %>
        </ul>
    <% } %>

    <form action="/students/add" method="POST">
        <label for="sid">Student ID</label><br>
        <input type="text" id="sid" name="sid" value="<%= student.sid || '' %>" required><br><br>

        <label for="name">Name</label><br>
        <input type="text" id="name" name="name" value="<%= student.name || '' %>" required><br><br>

        <label for="age">Age</label><br>
        <input type="number" id="age" name="age" value="<%= student.age || '' %>" required><br><br>

        <button type="submit">Add</button>
    </form>
</body>
</html>
