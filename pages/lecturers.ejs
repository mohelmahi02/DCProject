<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
</head>
<body>
    <h1>Lecturers</h1>
    <a href="/">Home</a>
    <table border="1">
        <thead>
            <tr>
                <th>Lecturer ID</th>
                <th>Name</th>
                <th>Department ID</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% lecturers.forEach(lecturer => { %>
                <tr>
                    <td><%= lecturer._id %></td>
                    <td><%= lecturer.name %></td>
                    <td><%= lecturer.did %></td>
                    <td>
                        
                        <form action="/lecturers/delete/<%= lecturer._id %>" method="POST" style="display:inline;">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>

   
    <% if (error) { %>
        <p style="color: black;"><%= error %></p>
    <% } %>
</body>
</html>
